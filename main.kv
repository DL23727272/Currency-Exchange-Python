
<CurrencyConverterScreen>:
    MDScreen:

        MDBottomNavigation:
            panel_color: "#8ECEDE"
            selected_color_background: "white"
            text_color_active: "black"

            MDBottomNavigationItem:
                name: 'screen 1'
                text: 'Convert'
                icon: 'scale-balance'
                color: 1 , 0 , 0 , 1
               
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: "300dp"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    
                    Image:
                        source: "logo.jpg"
                        size_hint: None, None
                        width: "180dp"
                        height: "180dp"
                        pos_hint: {'center_x': .5, 'center_y': .9}
                    MDLabel:
                        id: output_label
                        text: ""
                        halign: "center"
                        theme_text_color: "Secondary"
                        font_style: "Body1"
                        size_hint_y: None
                        height: self.texture_size[1]
                    MDTextField:
                        id: currency1_field
                        hint_text: "Enter first currency"
                        helper_text: "e.g., USD, EUR, GBP"
                        helper_text_mode: "on_focus"
                        size_hint_x: None
                        width: 300
                        size_hint_y: None
                        height: "48dp"
                        multiline: False
                        pos_hint: {'center_x': 0.5}

                    MDLabel:
                        text: "Convert to"
                        size_hint: None, None
                        size: 150, 50
                        pos_hint: {"center_x": 0.5}
                        elevation_normal: 8
                    MDTextField:
                        id: currency2_field
                        hint_text: "Enter second currency"
                        helper_text: "e.g., USD, EUR, GBP"
                        helper_text_mode: "on_focus"
                        size_hint_x: None
                        width: 300
                        size_hint_y: None
                        height: "48dp"
                        multiline: False
                        pos_hint: {'center_x': 0.5}

                    MDTextField:
                        id: amount_field
                        hint_text: "Enter amount"
                        input_type: "number"
                        size_hint_x: None
                        width: 300
                        size_hint_y: None
                        height: "48dp"
                        multiline: False
                        pos_hint: {'center_x': 0.5}

                    MDRectangleFlatButton:
                        text: "Convert"
                        on_press: app.convert_currency()
                        size_hint: None, None
                        size: 150, 50
                        pos_hint: {"center_x": 0.5}
                        elevation_normal: 8
                MDFloatingActionButton:
                    icon: "logout"
                    md_bg_color: "#8ECEDE"
                    pos_hint: {"center_x": .9, "center_y": .1}
                    on_release: app.logout_button()

            MDBottomNavigationItem:
                name: 'screen 2'
                text: 'About'
                icon: 'information'

                MDLabel:
                    text: 'INFORMATION ABOUT DEVS'
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .7}
                    bold: True
                    
                MDLabel:
                    text: '  Thesly Joy Cabas'
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .6}
                MDLabel:
                    text: ' Juvy Ann C. Conde  '
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .5}

            MDBottomNavigationItem:
                name: 'screen 3'
                text: 'System Info'
                icon: 'application'

                MDLabel:
                    text: 'System Info'
                    halign: 'center'
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .7}
                    bold: True
                MDLabel:
                    text: ' A currency converter is a software tool or online service that converts the value of one currency into another. It typically takes input in the form of an amount in one currency and then provides the equivalent amount in another currency, based on the current exchange rate. These tools can be standalone applications, integrated into websites, or available as mobile apps, providing convenient ways for users to quickly convert currencies for various purposes such as travel, finance, or international business transactions.'
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .4}

            MDBottomNavigationItem:
                name: 'screen 4'
                text: 'System Help'
                icon: 'application-braces-outline'

                MDLabel:
                    text: 'System Help'
                    halign: 'center'
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .7}
                    bold: True
                MDLabel:
                    text: "Design a clean and intuitive interface where users can input the amount they want to convert and select the currencies they want to convert from and to."
                    halign: 'center'
                    pos_hint: {"center_x": .5, "center_y": .6}
