
<CurrencyConverterScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: "300dp"
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDLabel:
            id: output_label
            text: ""
            halign: "center"
            theme_text_color: "Secondary"
            font_style: "Body1"
            size_hint_y: None
            height: self.texture_size[1]
        MDTextField:
            id: currency1_field
            hint_text: "Enter first currency"
            helper_text: "e.g., USD, EUR, GBP"
            helper_text_mode: "on_focus"
            size_hint_x: None
            width: 300
            size_hint_y: None
            height: "48dp"
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDLabel:
            text: "Convert to"
            size_hint: None, None
            size: 150, 50
            pos_hint: {"center_x": 0.5}
            elevation_normal: 8
        MDTextField:
            id: currency2_field
            hint_text: "Enter second currency"
            helper_text: "e.g., USD, EUR, GBP"
            helper_text_mode: "on_focus"
            size_hint_x: None
            width: 300
            size_hint_y: None
            height: "48dp"
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDTextField:
            id: amount_field
            hint_text: "Enter amount"
            input_type: "number"
            size_hint_x: None
            width: 300
            size_hint_y: None
            height: "48dp"
            multiline: False
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

        MDRectangleFlatButton:
            text: "Convert"
            on_press: app.convert_currency()
            size_hint: None, None
            size: 150, 50
            pos_hint: {"center_x": 0.5}
            elevation_normal: 8

       
